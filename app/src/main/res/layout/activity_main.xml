<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relativeLayout">

    <TextView android:text="Spinner personalizado" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t_info" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sp_diasSemana"
        android:layout_below="@+id/t_info"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lv_diasSemana"
        android:layout_below="@+id/sp_diasSemana"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="------------------------------------------------------------------------------"
        android:id="@+id/textView"
        android:layout_alignEnd="@+id/sp_diasSemana"
        android:layout_below="@+id/sp_diasSemana"
        android:layout_alignParentStart="true" />

</RelativeLayout>
